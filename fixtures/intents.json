{
  "intents": [
    {
      "tag": "greeting",
      "patterns": [
        "Hi",
        "How are you",
        "Is anyone there?",
        "Hello",
        "Good day"
      ],
      "responses": [
        "Hello, thanks for visiting",
        "Good to see you again",
        "Hi there, how can I help?"
      ],
      "context_set": ""
    },
    {
      "tag": "goodbye",
      "patterns": [
        "Bye",
        "See you later",
        "Goodbye"
      ],
      "responses": [
        "See you later, thanks for visiting",
        "Have a nice day",
        "Bye! Come back again soon."
      ],
      "context_set": ""
    },
    {
      "tag": "thanks",
      "patterns": [
        "Thanks",
        "Thank you",
        "That's helpful"
      ],
      "responses": [
        "Happy to help!",
        "Any time!",
        "My pleasure"
      ]
    },
    {
      "tag": "roller_shutter",
      "patterns": [
        "open window",
        "window",
        "roller shutter",
        "shutter"
      ],
      "responses": [
        "do you want to open, close or stop ?"
      ],
      "context_set": "roller_command"
    },
    {
      "tag": "open",
      "patterns": [
        "open"
      ],
      "responses": [
        "exec open_shutter"
      ],
      "context_filter": "roller_command"
    },
    {
      "tag": "close",
      "patterns": [
        "close"
      ],
      "responses": [
        "exec close_shutter"
      ],
      "context_filter": "roller_command"
    },
    {
      "tag": "stop",
      "patterns": [
        "stop"
      ],
      "responses": [
        "exec stop_shutter"
      ],
      "context_filter": "roller_command"
    },
    {
      "tag": "take_photo",
      "patterns": [
        "take photo",
        "photo",
        "camera",
        "live camera"
      ],
      "responses": [
        "exec camera_photo"
      ]
    }
  ]
}

